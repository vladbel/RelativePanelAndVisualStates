<Application
    x:Class="RelativePanelAndVisualStates.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RelativePanelAndVisualStates"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Assets/Fonts/FontsDictionary.xaml"/>
                <ResourceDictionary Source="Common/Brushes.xaml" />
                <ResourceDictionary Source="Common/StylesV2.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <local:HeightToWidthConverter x:Key="HeightToWidthConverter" />
            <local:WidthToHeightConverter x:Key="WidthToHeightConverter" />
        </ResourceDictionary>
    </Application.Resources>

</Application>
